<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/key_pad_num_1"
            style="@style/LoginKeyPadTheme"
            android:text="1"
             />
        <TextView
            android:id="@+id/key_pad_num_2"
            style="@style/LoginKeyPadTheme"
            android:text="2"
            />
        <TextView
            android:id="@+id/key_pad_num_3"
            style="@style/LoginKeyPadTheme"
            android:text="3"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/key_pad_num_4"
            style="@style/LoginKeyPadTheme"
            android:text="4"
            />
        <TextView
            android:id="@+id/key_pad_num_5"
            style="@style/LoginKeyPadTheme"
            android:text="5"
            />
        <TextView
            android:id="@+id/key_pad_num_6"
            style="@style/LoginKeyPadTheme"
            android:text="6"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/key_pad_num_7"
            style="@style/LoginKeyPadTheme"
            android:text="7"
            />
        <TextView
            android:id="@+id/key_pad_num_8"
            style="@style/LoginKeyPadTheme"
            android:text="8"
            />
        <TextView
            android:id="@+id/key_pad_num_9"
            style="@style/LoginKeyPadTheme"
            android:text="9"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/key_pad_num_0"
            style="@style/LoginKeyPadTheme"
            android:layout_weight="1"
            android:text="0"
            />

        <ImageView
            android:id="@+id/key_pad_num_delete"
            style="@style/LoginKeyPadTheme"
            android:layout_weight="2"
            android:src="@drawable/ic_keyboard_backspace_white_24dp"
            android:scaleType="center"
            />
    </LinearLayout>

</LinearLayout>